{
  "manifest_version": 3,
  "name": "LaTeX Renderer for WhatsAapp",
  "version": "1.0",
  "description": "Renderiza LaTeX en los mensajes de WhatsApp Web.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "css": ["katex/katex.min.css"],
      "js": ["katex/katex.min.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "katex/fonts/*",
      "katex/katex.min.js",
      "katex/katex.min.css"
    ],
    "matches": ["https://web.whatsapp.com/*"]
  }]
}